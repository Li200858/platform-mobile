# 环境配置示例文件
# 复制此文件为 .env 并填入实际值

# MongoDB连接字符串
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/platform-program

# 服务器端口
PORT=5001

# 环境模式 (development/production)
NODE_ENV=development

# CORS允许的域名 (用逗号分隔)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://platform-program.onrender.com,https://platform-mobile.onrender.com

# 文件上传配置
MAX_FILE_SIZE=52428800
MAX_FILES=10

# 安全配置
JWT_SECRET=your-jwt-secret-key
BCRYPT_ROUNDS=12

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 缓存配置
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# 监控配置
ENABLE_MONITORING=true
MONITORING_INTERVAL=30000
